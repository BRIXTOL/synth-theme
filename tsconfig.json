{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "declaration": true,
    "esModuleInterop": true,
    "importHelpers": true,
    "module": "es2015",
    "outDir": "./package",
    "lib": [
      "dom",
      "es7"
    ],
    "paths": {
      "@/": [
        "src/"
      ]
    },
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "sourceMap": false,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "target": "es5"
  },
  "include": [
    "./src"
  ],
  "exclude": [
    "node_modules"
  ]
}
